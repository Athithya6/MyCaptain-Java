package smallestnum;

import java.util.Scanner;

/**
 *
 * @author DELL
 */
public class Smallestnum {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        System.out.println("Enter the three numbers");
        Scanner s=new Scanner(System.in);
        int a,b,c;
        a=s.nextInt();
        b=s.nextInt();
        c=s.nextInt();
        if(a<b && a<c)
        System.out.println("The smallest number is \t"+a);
        else if(b<a && b<c)
        System.out.println("The smallest number is \t"+b);
        else
            System.out.println("The smallest number is \t"+c);
        }
   }
